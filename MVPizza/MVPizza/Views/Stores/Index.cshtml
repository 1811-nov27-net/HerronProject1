@model IEnumerable<MVPizza.DataAccess.Store>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfSupremes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfMeatLovers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfVeggie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfSolidGold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.StoreName)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfSupremes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfMeatLovers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfVeggie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfSolidGold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StoreName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StoreName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StoreName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
