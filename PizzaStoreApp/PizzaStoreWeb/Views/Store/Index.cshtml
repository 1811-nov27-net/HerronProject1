@model IEnumerable<PizzaStoreWeb.Models.StoreUI>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoreID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.StoreID }) |
                @Html.ActionLink("Details", "Details", new { item.StoreID }) |
                @Html.ActionLink("Delete", "Delete", new { item.StoreID })
            </td>
        </tr>
}
    </tbody>
</table>
